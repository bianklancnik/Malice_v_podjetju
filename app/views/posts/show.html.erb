<h1 class='mt-3'><%= @post.title %></h1>
<div class='mt-2'><%= @post.body %></div>
<div class='mt-2 text-right'>Datum malice: <%= @post.date %></div>
<div class='mt-2'><%= link_to "Prijava na malico", like_post_path(@post), method: :put, :class => 'btn btn-primary' %></div>
<div class='mt-2'><% if @post.get_upvotes.size == 1 %>Na malico ste prijavljeni
<% else %>Na malico niste prijavljeni<%end%></div>
<% if @post.admin_id == current_admin.id %>
<div class='mt-2'><%= link_to "Uredi", edit_post_path(@post), :class => 'btn btn-primary' %>
<%= link_to "Izbriši", post_path(@post), 
                        method: :delete,
                        data: {confirm: 'Ali ste prepričani?'},
                        :class => 'btn btn-danger' %></div> 
<% end %> 
